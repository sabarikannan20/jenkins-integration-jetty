    </servlet-mapping>

    <servlet-mapping>
      <servlet-name>Address</servlet-name>
      <url-pattern>/address/readAll</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
      <servlet-name>Address</servlet-name>
      <url-pattern>/address/delete</url-pattern>
