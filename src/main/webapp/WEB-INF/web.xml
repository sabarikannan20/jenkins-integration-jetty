    <servlet-mapping>
      <servlet-name>Person</servlet-name>
      <url-pattern>/person/update</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
      <servlet-name>Person</servlet-name>
      <url-pattern>/person/read</url-pattern>
    </servlet-mapping>

