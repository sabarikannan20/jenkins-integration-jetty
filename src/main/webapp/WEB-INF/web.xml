<?xml version="1.0" encoding="UTF-8"?>
<web-app>

    <servlet>
      <servlet-name>ServletDemo</servlet-name>
      <servlet-class>com.objectfrontier.training.java.jdbc.servlet.ServletDemo</servlet-class>
    </servlet>

    <servlet-mapping>
      <servlet-name>ServletDemo</servlet-name>
      <url-pattern>/healthCheck</url-pattern>
    </servlet-mapping>

