      <servlet-name>Person</servlet-name>
      <url-pattern>/person/readAll</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
      <servlet-name>Person</servlet-name>
      <url-pattern>/person/initial</url-pattern>
    </servlet-mapping>
    
    <servlet-mapping>
      <servlet-name>Person</servlet-name>
      <url-pattern>/person/delete</url-pattern>
    </servlet-mapping>

